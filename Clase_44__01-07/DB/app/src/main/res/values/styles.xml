<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botones">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#E2C7DA</item>
        <item name="android:fontFamily">@font/fauna_one</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/fauna_one</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">#005D6C</item>
        <item name="android:textColorHint">#7C68A2AE</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>